---
const { post } = Astro.props;
const { slug, data } = post;
---

<article class="blog-card">
    <div class="blog-thumbnail">
        {data.heroImage ? (
            <img src={data.heroImage} alt={data.title} style="width: 100%; height: 100%; object-fit: cover; opacity: 1;" />
        ) : (
            <i data-lucide="book-open" style="width: 48px; height: 48px;"></i>
        )}
    </div>
    <div class="blog-card-content">
        <span class="blog-date">{data.pubDate.toLocaleDateString('es-ES', { day: '2-digit', month: 'short', year: 'numeric' })}</span>
        <h3>{data.title}</h3>
        <p>{data.description}</p>
        <a href={`/blog/${slug}`} class="read-more">Leer m√°s</a>
    </div>
</article>
